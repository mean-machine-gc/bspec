{
  "name": "ubispec",
  "version": "0.1.0",
  "description": "Ubiquitous specification format for describing software systems behaviour",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "./scripts/dev-run.sh",
    "gen:schema": "tsx ./scripts/gen-schemas.ts",
    "gen:docs": "tsx ./scripts/gen-schema-docs.ts",
    "gen:index": "tsx ./scripts/gen-index.ts",
    "gen:all": "npm run gen:schema && npm run gen:docs && npm run gen:index"
  },
  "author": "Giovanni Chiodi",
  "license": "MIT",
  "devDependencies": {
    "tsx": "^4.21.0",
    "zod": "^4.3.6",
    "zod-to-json-schema": "^3.25.1"
  },
  "dependencies": {
    "@types/node": "^25.3.0"
  }
}
